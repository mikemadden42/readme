# install packages
apt-cyg install cmake curl gcc-g++ git make perl python vim-minimal

# remove packages
apt-cyg remove cmake curl gcc-g++ git make perl python vim-minimal

# update package repo
apt-cyg update

# list packages
apt-cyg show

# find packages
apt-cyg find perl
apt-cyg find python

# get package info
apt-cyg describe perl
apt-cyg describe python
