--------

vagrant box add centos6 ~/Downloads/vagrant/boxes/opscode_centos-6.6_chef-provisionerless.box
vagrant box add centos7 ~/Downloads/vagrant/boxes/opscode_centos-7.0_chef-provisionerless.box

vagrant box list

mkdir -p ~/Documents/vagrant-boxes/centos-6-dev
cd ~/Documents/vagrant-boxes/centos-6-dev
vagrant init centos6

mkdir -p ~/Documents/vagrant-boxes/centos-7-dev
cd ~/Documents/vagrant-boxes/centos-7-dev
vagrant init centos7

# boot up box
vagrant up

# ssh to box
vagrant ssh

# halt box
vagrant halt

# load new setting on box
vagrant reload

# supend / resume box
vagrant suspend
vagrant resume

# get status on box
vagrant status

# destroy box, not the base box
vagrant destroy

# destroy base box
vagrant box remove centos-base

--------

sudo yum clean all && sudo yum upgrade -y

sudo yum install -y gcc cpp kernel-devel kernel-headers perl

sudo sysctl -w vm.swappiness=5

sudo /etc/cron.daily/makewhatis.cron
sudo /etc/cron.daily/mlocate.cron 
sudo /etc/cron.daily/prelink

git clone https://github.com/mikemadden42/puppet.git
sudo gem install puppet-lint
puppet-lint puppet/manifests/site.pp
sudo puppet apply ./puppet/manifests/site.pp

